@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UlLayout.cshtml";
}
<style>
    .equal-dimension-image {
        width: 350px; 
        height: 250px; 
    }

</style>

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Blog</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="#url">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Blog </li>
            </ul>
        </div>
    </div>
</section>




<section class="w3l-blog-block2 mt-md-5 pb-5">
    <div class="container mb-lg-4">
        <h3 class="hny-title mb-5">Blog Yazılarımız</h3>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 item">
                    <div class="card">
                        <div class="card-header p-0 position-relative">
                            <a href="@Url.Action("Details", "Blog", new { id = item.Id })">
                                <img class="card-img-bottom d-block radius-image equal-dimension-image" src="@item.Image" alt="Card image cap">
                            </a>
                        </div>
                        <div class="card-body p-0 blog-details">
                            <a href="@Url.Action("Details", "Blog", new { id = item.Id })" class="blog-desc">
                               @item.Title
                            </a>
                            <p>
                                @if (item.Description.Length > 50)
                                {
                                    @item.Description.Substring(0, 100) <span class="read-more">Devamını Oku</span>
                                }
                                else
                                {
                                    @item.Description
                                }
                            </p>
                            <div class="author align-items-center mt-3 mb-1">
                                <a href="#"> Toprak Palet Orman Ürünleri Ambalaj</a>
                            </div>
                            <ul class="blog-meta">
                                <li class="meta-item blog-lesson">
                                    <span class="meta-value"> @item.CreateDate.ToString("MMM/yyyy") </span>
                                </li>
                             
                            </ul>
                        </div>
                    </div>
                </div>

            }

        </div>
        <!-- pagination -->
       @*  <div class="pagination-wrapper mt-5">
            <ul class="page-pagination">
                <li><span aria-current="page" class="page-numbers current">1</span></li>
                <li><a class="page-numbers" href="#url">2</a></li>
                <li><a class="page-numbers" href="#url">3</a></li>
                <li><a class="page-numbers" href="#url">4</a></li>
                <li><a class="page-numbers" href="#url">....</a></li>
                <li><a class="page-numbers" href="#url">15</a></li>
                <li><a class="next" href="#url"><span class="fa fa-angle-right"></span></a></li>
            </ul>
        </div> *@
        <!-- //pagination -->

    </div>
</section>
