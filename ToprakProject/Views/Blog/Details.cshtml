@model Blog
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UlLayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Blog</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="#url">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Blog Detayları </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!--/blog-->
<div class="py-5 w3l-homeblock1 text-center">
    <div class="container mt-md-3">
        <h3 class="blog-desc-big text-center mb-4">
            @Model.Title
        </h3>

        <div class="blog-post-img">
            <a href="#">
                <h5 style="color:green; text-align: center;">Toprak Palet Orman Ürünleri Ambalaj</h5>
            </a>
        </div>




    </div>
</div>
<section class="blog-post-main w3l-homeblock1">
    <div class="blog-content-inf pb-5">
        <div class="container pb-lg-4">
            <div class="single-post-image">
                <div class="post-content" style="display: flex; justify-content: center; align-items: center;">
                    <img style="width: 850px; height: 300px; object-fit: cover;" src="@Model.Image" class="radius-image img-fluid mb-5" alt="" />
                </div>

            </div>
            <div class="single-post-content">

                @Model.Description
                <br />
                <br />
                <br />
                @Model.Description2

                <div class="d-grid left-right mt-5 pb-md-5">
                    <div class="buttons-singles tags">
                        <h4>Tags :</h4>
                        <a href="#blog-tag">@Model.Tags</a>

                    </div>

                </div>

            </div>
        </div>
    </div>

</section>

