@model List<Question>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UlLayout.cshtml";
}
<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Sıkca Sorulan Sorular</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="#url">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Sıkca Sorulan Sorular </li>
            </ul>
        </div>
    </div>
</section>
<br />
<br />
<br />
<section class="faq-section bg-light full-screen d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto text-center">
    
                <br />
                <br />
                <div class="accordion w-75 mx-auto" id="faqAccordion">
                    @foreach (var item in Model)
                    {
                        <div class="card border-0 shadow rounded-lg mb-5">
                            <div class="card-header bg-transparent px-4 py-3" id="heading@(item.Id)">
                                <h5 class="mb-0">
                                    <button class="btn btn-link text-dark font-weight-bold collapsed" type="button" data-toggle="collapse" data-target="#collapse@(item.Id)" aria-expanded="false" aria-controls="collapse@(item.Id)">
                                        @item.Que
                                    </button>
                                </h5>
                            </div>

                            <div id="collapse@(item.Id)" class="collapse" aria-labelledby="heading@(item.Id)" data-parent="#faqAccordion">
                                <div class="card-body px-4 py-3">
                                    @item.Reply
                                </div>
                            </div>
                        </div>

                    }


                </div>

            </div>
        </div>
    </div>
</section>


