@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UlLayout.cshtml";
}

<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">İletişim Bilgilerimiz</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="#url">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-6 contact-left">
                        <div class="partners">
                            <div class="cont-details">
                                <h5>Toprak Palet Orman Ürünleri Ambalaj</h5>
                                <p class="mt-3 mb-4">

                                </p>
                            </div>
                            <div class="hours">
                                <h6 class="mt-4">Mail Adresimiz:</h6>
                                <p>
                                    <a href="mailto:mail@traversal.com">
                                   @item.Email
                                    </a>
                                </p>
                                <h6 class="mt-4">Adres:</h6>
                                <p> @item.Address</p>
                                <h6 class="mt-4">Telefon Numaralarımız:</h6>
                                <p class="margin-top"><a href="tel:@item.Phone2">@item.Phone2</a></p>
                                <p class="margin-top"><a href="tel:@item.Phone">@item.Phone</a></p>
                            </div>
                        </div>
                    </div>

                }
                @await Component.InvokeAsync("Message")

            </div>
        </div>
        <div class="map mt-5 pt-md-5">
            <h5>Konum</h5>
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12005.205891087844!2d28.4539238!3d41.2152003!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14b54f49ae2d2143%3A0x8f15dee701ea4473!2sToprak%20Palet%20Orman%20%C3%9Cr%C3%BCnleri%20Ambalaj!5e0!3m2!1str!2str!4v1701661555775!5m2!1str!2str" ></iframe>
        </div>
    </div>
</section>
<!-- /contact-form -->
