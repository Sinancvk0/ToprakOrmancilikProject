
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="card">
        <div class="card-header text-white bg-danger bg-gradient">
            <span class="fs-4">Blog Bölümü Listesi</span>

        </div>
        <div class="card-body">
            <table id="BlogTable" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>AnaGörsel</th>
                        <th>Görsel 2</th>
                        <th>Görsel 3</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Alt Açıklama</th>
                        <th>Etiketler</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {

        var dataTable = $('#BlogTable').DataTable({
            ajax: {
                url: '/Admin/Blog/GetList',
                dataSrc: ''
            },
            columns: [
                { data: 'id' },
                {
                    data: 'image',
                    render: function (data, type, row) {
                        return `<img src="${data}" class="img-thumbnail" width="50" height="50" alt="Görsel">`;
                    }
                },
                {
                    data: 'title2',
                    render: function (data, type, row) {
                        return `<img src="${data}" class="img-thumbnail" width="50" height="50" alt="Görsel">`;
                    }
                },
                {
                    data: 'title3',
                    render: function (data, type, row) {
                        return `<img src="${data}" class="img-thumbnail" width="50" height="50" alt="Görsel">`;
                    }
                },
                { data: 'title' },
                { data: 'description' },
                { data: 'description2' },
                { data: 'tags' },
                { data: 'createDate' },
                {
                    data: null,
                    render: function (data, type, row) {
                        return `<a href="#" onclick="deleteBlog(${row.id})" class="btn btn-sm btn-danger">Sil</a>`;
                    }
                }
            ]
        });
    });
    function deleteBlog(blogId) {
        Swal.fire({
            title: 'Silmek istediğinize emin misiniz?',
            text: "Görsel Silinecek",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sil!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Admin/Blog/DeleteBlog/' + blogId,
                    method: 'POST',
                    success: function () {
                        Swal.fire(
                            'Başarılı!',
                            'Görsel silindi.',
                            'success'
                        );
                        dataTable.ajax.reload();
                    },
                    error: function () {
                        Swal.fire(
                            'Hata!',
                            'Görsel silinemedi.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>


