@using Model
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <a href="#" class="btn btn-primary">Yeni Hizmet Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Başlık</th>
                <th>Kısa Açıklama</th>
                <th>Oluşturulma Tarihi</th>
                <th>Yazı</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Image</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.CreateDate</td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" data-description="@item.Description">
                            @item.Description2
                        </button>
                    </td>
                    <td><a href="#" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">İçerik Modal'i</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap ve jQuery kütüphaneleri -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- JavaScript -->
    <script>
        $(document).ready(function () {
            $('#myModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Öğe üzerindeki düğmeyi alır
                var description = button.data('description'); // data-description değerini alır
                var modal = $(this);
                modal.find('.modal-body p').text(description); // Modal içeriğini günceller
            });

            // Sayfa yüklendiğinde modal içeriğini doldur
            var description = "@Model.FirstOrDefault()?.Description"; // İlk ürünün açıklamasını alır
            $('#myModal .modal-body p').text(description);
        });
    </script>

</body>
</html>

